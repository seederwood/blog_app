<h1 id="page_title">Say Hello</h1>

<div class="skinny_wrapper wrapper_padding">
  <%= form_for @contact do |f| %>
    <%= f.label :name, 'Your Name' %><br/>
    <%= f.text_field :name, required: true %>

    <br/>

    <%= f.label :email, 'Your Email Address' %><br/>
    <%= f.email_field :email, required: true %>

    <br/>

    <%=f.label :message, 'Your Message' %><br/>
    <%=f.text_area :message, as: :text %>

    <div class="hidden">
      <%= f.label :nickname %><br/>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
    </div>

    <%= f.submit 'Send Message', class: "button" %>
  <% end %>

</div>
