<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @article.created_at.strftime("%^a, %d %B | %H:%M") %></p>
    <h1 class="show_header"><%= @article.title %></h1>
    <hr />
  </header>

  <div id="content">
    <%= markdown @article.content %>
  </div>


  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_article_path(@article) %> |
      <%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: 'Are you sure about that, Ray?'} %>
    </div>
  <% end %>

  <hr />

  <div id="share_box">
    <p>Share '<%= @article.title %>'</p>
    <%= social_share_button_tag(@article.title) %>
  </div>

  <hr />

  <%= render 'disqus' %>


</div>
<script id="dsq-count-scr" src="//my-blog-e5ynn1p5qh.disqus.com/count.js" async></script>
